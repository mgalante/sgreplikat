define(['plugins/http','helpers/serializer','jquery','knockout', 'viewModels/<%=module%>'],function(http,serializer,$,ko,<%=Module%>){

    var <%=modules%> = {
        getAll: function()
        {
            var dfd = new $.Deferred();
            http.get("/sgreplikat/index.php/<%=modules%>/list").then(function(data){
                dfd.resolve(serializer.deserialize(JSON.stringify(data)));
            }).fail(function(){
                dfd.reject();
            });
            return dfd.promise();
        },
        getById: function(id)
        {
            if(id == 0)
            {
                return $.when(new <%=Module%>({id : 0}));
            }
            else
            {
                var dfd = new $.Deferred();
                http.get("/sgreplikat/index.php/<%=modules%>/get/" + id).then(function(data){
                    dfd.resolve(serializer.deserialize(JSON.stringify(data)));
                }).fail(function(){
                        dfd.reject();
                    });
                return dfd.promise();
            }
        },
        add: function(item){
            this.items.push(item);
        },
        save: function(item)
        {
            return $.ajax({
                dataType: 'json',
                type: 'post',
                url: "/sgreplikat/index.php/<%=modules%>/save",
                data: {request: ko.toJSON(item)}
            });
        }
    };
    return proveedores;
});